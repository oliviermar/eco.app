{% extends 'base.html.twig' %}

{% block body %}
    <section class="text-center text-white">
        <h1>Gestion de compte</h1>
        <hr class="my-4" />
        <div class="mb-3">
            <b>{{ user.username }}</b><br />
            <i>Ecologiste en herbe</i>
            <div class="bs-component">
                <div class="progress">
                    <div class="progress-bar progress-bar-striped" role="progressbar" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100" style="width:10%;"></div>
                </div>
            </div>
        </div>
    </section>
    <section class="text-center text-white">
        {% include 'address/list.html.twig' with {'user': user} %}
        <a class="mt-3 btn btn-info btn-block border border-light" href="{{ path('account_address_add') }}">Ajouter une adresse</a>
    </section>
{% endblock %}
