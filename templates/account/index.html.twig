{% extends 'base.html.twig' %}

{% block body %}
    <section>
        <div class="head">
            <div class="container">
                <h1>Mes informations</h1>
            </div>
        </div>
        <div class="container inner">
            <div class="mb-3">
                <b>{{ user.username }}</b><br />
                <i>Ecologiste en herbe</i>
                <div class="bs-component">
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped" role="progressbar" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100" style="width:15%;"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="container inner">
            <hr class="my-4" />
            {% include 'address/list.html.twig' with {'user': user} %}
            <a class="mt-3 btn btn-info btn-block border border-light" href="{{ path('account_address_add') }}">Ajouter une adresse</a>
        </div>
    </section>
{% endblock %}
