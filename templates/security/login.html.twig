{% extends 'base.html.twig' %}

{% block body %}
    <section>
        <h2 class="text-center mb-3">Connexion</h2>
    {% if error is defined %}
        <span class="has-error">{{error}}</span>
    {% endif %}
        <form action="{{ path('login') }}" method="POST" class="col-sm-12">
            <div class="form-group">
                <input type="hidden" name="submitted" value="1" />
                <input class="form-control text-center" id="username" type="text" name="username" placeholder="Email" />
            </div>
            <div class="form-group">
                <input class="form-control text-center" id="password" type="password" name="password" placeholder="Mots de passe" />
            </div>
            <button class="btn btn-info btn-block" type="submit">Connexion</button>
        </form>
        <div class="col-sm-12 text-center mt-3"><p>ou</p></div>
        <div class="col-sm-12">
            <a class="btn btn-primary btn-block" href="{{ path('register') }}">Inscrivez-vous</a>
        </div>
    </section>
{% endblock %}
